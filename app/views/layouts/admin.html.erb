<!DOCTYPE html>
<html>
  <head>
    <title><%= controller_name.capitalize %> <%= action_name.capitalize %> - Rwarrims</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="display: flex">
    <div class="nav" style="padding-right: 50px">
      <h1>RwarriMS</h1>
      <h3>Admin <% if current_employee.admin == true %>
                  <%= link_to "Switch", me_path %><br>
                <% end %></h3>
      <%= link_to "Admin Home", admin_path %><br>
      <%= link_to "Documents", admin_documents_path %><br>
      <%= link_to "Attendance", admin_attendances_path %><br>
      <%= link_to "Employees", admin_employees_path %><br>
      <%= link_to "Leaves", admin_leaves_path %><br>
    </div>
    <div class="body" style="flex: 1">
      <%= yield %>
    </div>
    <div class="panel" style="max-width: 30%; padding-left: 50px; padding-top: 25px">
      <% if (yield :panel).present? %>
        <% if (yield :panel_type) == "inline" %>
          <%= yield :panel %>
        <% else %>
          <%= render yield :panel %>
        <% end %>
      <% end %>
    </div>
  </body>
</html>
