<!DOCTYPE html>
<html>
  <head>
    <title><%= action_name.downcase.gsub("index","all").capitalize %> <%= controller_name.downcase.gsub("index","home").capitalize %> - Rwarrims</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body class="flex horizontal">
    <nav>
      <div>
        <h2>RwarriMS<span class="menu-tog" id="menu-tog">menu</span></h2>
        <ul class="menu" id="main-menu">
          <h3>
            <% if current_employee.admin %>
              <%= link_to "Admin", me_path, id: "switch" %>
            <% else %>
              Admin
            <% end %>
          </h3>
          <li><input type="text" name="hello" placeholder="Search"></li>
          <li><%= link_to "Admin Home", admin_path %></li>
          <li><%= link_to "Attendance", admin_attendances_path %></li>
          <li><%= link_to "Documents", admin_documents_path %></li>
          <li><%= link_to "Employees", admin_employees_path %></li>
          <li><%= link_to "Leaves", admin_leaves_path %></li>
          <li><%= link_to "Help", help_path %></li>
        </ul>
      </div>
    </nav>
    <main>
      <%= yield %>
    </main>
    <% if (yield :panel).present? %>
      <nav class="options">
        <div class="options">
          <% if (yield :panel_type) == "inline" %>
            <%= yield :panel %>
          <% else %>
            <% begin %>
              <%= render yield :panel %>
            <% rescue Exception => e %>
              <%= yield :panel %>
            <% end %>
          <% end %>
        </div>
      </nav>
    <% end %>
  </body>
</html>
