<div class="block document-preview-block" style="background-image: url(<%= "\"#{url_for(document.attachment)}\"" %>);">
	<div class="meta">
	  <h4><%= document.title %></h4>
	  <!-- <small>by <strong class="by">One User</strong></small> -->
	  <small>uploaded <strong><%= time_ago_in_words(document.created_at) %> ago</strong></small>
	  <small class="flex">
	  	<button><%= link_to 'Show', document %></button>
	  	<button><%= link_to 'Download', url_for(document.attachment), class: "delete-button" %></button>
	  </small>
	</div>
</div>
