<%= form_with(model: leave, local: true) do |form| %>
  <% if leave.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(leave.errors.count, "error") %> prohibited this leave from being saved:</h2>

      <ul>
      <% leave.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :reason %>
    <%= form.text_area :reason %>
  </div>

  <div class="field">
    <%= form.label :start %>
    <%= form.datetime_select :start %>
  </div>

  <div class="field">
    <%= form.label :end %>
    <%= form.datetime_select :end %>
  </div>

  <div class="field">
    <%= form.label :expected, "Expected to be at workplace" %>
    <%= form.datetime_select :expected %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.select :category, options_for_select(getCategoryOptions) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
